#include<stdio.h>
int main(){
    float principal, rate, time, si;


    printf("Enter the Principal amount.\n");
    scanf("%f",&principal);

    printf("Enter the rate of interest.\n");
    scanf("%f",&rate);

    printf("Enter the time period in years.\n");
    scanf("%f",&time);


    si = (principal*rate*time)/100;
    printf("Simple Interest  =  %.2f\n",si);


    return 0;


}
